<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <style>
        table,th,tr,th,td{
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>id</th>
            <th>Username</th>
            <th>Email</th>

        </tr>
      
       
        <% for(user of users){%>
            <tr>
                <td> <%= user.id %></td>
                <td><%= user.username  %></td>
                <td><%=  user.email %></td>
                <td>
                    <form method="post" action="/user/edit/<%= user.id %>?_method=patch">
                        <button>Edit username</button>
                    </form>
                </td>
                <td>
                    <form method="post" action="/user/delete/<%= user.id %>?_method=patch">
                        <button style="background-color: rgb(217, 22, 22);">Detele </button>
                    </form>
                </td>
           </tr>
        <% } %>
      
    </table>
    <br><br><br>
    <form method="post" action="/user/newuser">
        <button style="background-color: green;" type="submit">Add a newUser</button>
    </form>
</body>
</html>
